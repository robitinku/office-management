


<script>


    $(document).ready(function () {

        $("#save").on('click', function (e) {
            if ($("#Emp_Id").val() != "0") {
                var params = {
                    From_Date: $("#From_Date").val(),
                    To_Date: $("#To_Date").val(),
                    Emp_Id: $("#Emp_Id").val()
                };
                var tr = "";
                $.ajax({
                    url: '@Url.Action("EmpInfoStatus")',
                    data: JSON.stringify({ _db_Order_Detail: params }),
                    type: 'POST',
                    dataType: 'json',
                    async: false,
                    contentType: 'application/json',
                    success: function (result) {

                        tr = result;

                    }
                });

                $('#product-table .child').html("");
                $('#product-table .child').append(tr);
            }

            else {

                alert("Employee Name Require")
            }

        });

       


        $("#From_Date").datepicker(

              {
                  maxDate: '0',
                  beforeShow: function () {
                      jQuery(this).datepicker('option', 'maxDate', jQuery('#To_Date').val());
                  },
                  altFormat: "yy-mm-dd",
                  dateFormat: "yy-mm-dd"

              }

      );

        $("#To_Date").datepicker(

                {
                    maxDate: '0',
                    beforeShow: function () {
                        jQuery(this).datepicker('option', 'minDate', jQuery('#From_Date').val());
                    },
                    altFormat: "yy-mm-dd",
                    dateFormat: "yy-mm-dd"

                }

        );
          
            

            
            $("#empname").click(function () {

                var data = [];

                $.ajax({
                    url: '@Url.Action("EmpInfoDetail")',
                    data: JSON.stringify({ imagename: "" }),
                    type: 'POST',
                    dataType: 'json',
                    async: false,
                    contentType: 'application/json',
                    success: function (result) {

                        data = result;

                    }
                });

                $("#empname").autocomplete({
                    minLength: 2,
                    source: data._list_Emp_list,

                    focus: function (event, ui) {
                        $(this).val(ui.item.value);
                        return false;
                    },
                    select: function (event, ui) {
                        $(this).val(ui.item.value);
                        $("#Emp_Id").val(ui.item.id);

                        return false;
                    }

            });

            });



    });
    function valid() {

    

        if ($('#empname').val().trim() == '') {
            alert("Employee Name Require")
            return false;
        }
        else
            return true;

    }
</script>


