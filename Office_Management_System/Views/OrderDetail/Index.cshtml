


<script>


    $(document).ready(function () {

        $("#save").on('click', function (e) {
            if ($("#empid").val() != "0") {
                var params = {
                    From_Date: $("#From_Date").val(),
                    To_Date: $("#To_Date").val(),
                    Emp_Id: $("#empid").val()
                };
                var tr = "";
                $.ajax({
                    url: '@Url.Action("OrderInfoDetail")',
                    data: JSON.stringify({ _db_Order_Detail: params }),
                    type: 'POST',
                    dataType: 'json',
                    async: false,
                    contentType: 'application/json',
                    success: function (result) {

                        tr = result;

                    }
                });

                $('#product-table .child').html("");
                $('#product-table .child').append(tr);
            }

            else {

                alert("Employee Name Require")
            }

        });


        $("#From_Date").datepicker(

              {
                  maxDate: '0',
                  beforeShow: function () {
                      jQuery(this).datepicker('option', 'maxDate', jQuery('#To_Date').val());
                  },
                  altFormat: "yy-mm-dd",
                  dateFormat: "yy-mm-dd"

              }

      );

        $("#To_Date").datepicker(

                {
                    maxDate: '0',
                    beforeShow: function () {
                        jQuery(this).datepicker('option', 'minDate', jQuery('#From_Date').val());
                    },
                    altFormat: "yy-mm-dd",
                    dateFormat: "yy-mm-dd"

                }

        );




       



    });

</script>


