<script>


    $(document).ready(function () {
        //$("#dialog:ui-dialog").dialog("destroy");

        $("#loading").dialog({
            modal: true,
            height: 220,
            width: 220,
            autoOpen: false

        });
        $("#Restore").on('click', function (e) {
        
            $.ajax({
                url: '@Url.Action("RestoreDatabase")',

                type: 'POST',
                dataType: 'json',
                async: false,
                contentType: 'application/json',
                success: function (result) {

                    tr = result;

                }
            });
            $('#product-table .child').html("");
            $('#product-table .child').append(tr);


        });

        $("#product-table").on("click", "tr td:nth-child(4)", function (event) { 
            $("#loading").dialog('open');
            
            $.ajax({
                url: '@Url.Action("Restore")',
                data: JSON.stringify({ name: $(this).find("#RestoreData").val() }),
                type: 'POST',
                dataType: 'json',
                async: false,
                contentType: 'application/json',
                success: function (result) {

                    $("#loading").dialog('close');
                    alert(result);

                }
            });
        });
            

       

       
            
        $("#Backup").click(function () {
            $("#loading").dialog('open');

            $.ajax({
                url: '@Url.Action("BackUp")',
              
                type: 'POST',
                dataType: 'json',
                async: false,
                contentType: 'application/json',
                success: function (result) {

                    $("#loading").dialog('close');
                    alert(result);

                }
            });
           
                


            });



    });
  
</script>


